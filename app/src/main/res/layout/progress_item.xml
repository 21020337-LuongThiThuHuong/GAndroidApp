<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/progress_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/progress_item_line"
        android:layout_width="36dp"
        android:layout_height="18dp"
        android:scaleType="centerCrop"
        android:background="@drawable/dotted_line" />

    <LinearLayout
        android:id="@+id/progress_item_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/progress_item_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:src="@drawable/noun_next_step" />

        <TextView
            android:id="@+id/progress_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:text="Up!"
            android:textAllCaps="true"
            android:textColor="@color/green"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/progress_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:text="Ký hợp đồng vô thời hạn tại GHTK với vị trí Top Expert"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/progress_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="27/06"
            android:textColor="#808080"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>